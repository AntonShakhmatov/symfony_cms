{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pages</h1>

    <a href="{{ path('app_page_new') }}">Create new page</a>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Published</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for page in pages %}
                <tr>
                    <td>{{ page.id }}</td>
                    <td>{{ page.title }}</td>
                    <td>{{ page.slug }}</td>
                    <td>{{ page.isPublished ? 'Yes' : 'No' }}</td>
                    <td>
                        <a href="{{ path('app_page_edit', { id: page.id }) }}">Edit</a>
                        <a href="{{ path('app_page_delete', { id: page.id }) }}" onclick="return confirm('Are you sure?');">Delete</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No pages found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
